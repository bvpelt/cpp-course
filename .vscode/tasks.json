{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build with g++ version 11.3.0",
			"command": "/usr/bin/g++",
			"args": [				
				"-g",
				"-std=c++20",
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/rooster"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "Build with clang++ version 14.0.0",
			"command": "/usr/bin/clang++",
			"args": [				
				"-g",
				"-std=c++20",
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/rooster"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		}		
	]
}